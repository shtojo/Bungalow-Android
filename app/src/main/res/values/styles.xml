<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">  <!-- dark -->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:textColor">#40E040</item>/>
    </style>

    <style name="CustomTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">8pt</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textColor">#40E0E0</item>/>
    </style>

    <style name="CustomEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:singleLine">true</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">#00FF00</item>
    </style>

</resources>
